<header id="header">
  <div class="h-container container">
    <div id="logo" class= "col-md-3 col-sm-3">
      <a href="/">
        <img src="images/logo.png">
        <span>Lab02</span>
      </a>
    </div>
    <div class="search-box col-md-6 col-sm-6">
      <form>
        <input type="text" name="" class="text-ip-search" placeholder="Search Messages...">
        <button type="submit" class="btn-standard">
          <i class="fa fa-search"></i>
        </button>
      </form>
    </div>
    {{#if currentUser }}
      <div class="personal-info col-md-3 col-sm-3">
        <div class="options-opt">
          <a class="opt-info" id="opt-info-clk" data-indicate="close">
            <img src="{{ currentUser.avatar }}">
            <span> {{ currentUser.name }}
              <i class="fa fa-caret-down"></i>
            </span>
          </a>
          <div class="avatar-info">
            <ul>
              <li id="progress-bar-c">
                <span class="arrow top"></span>
                <h5 class="pr-info"><span class="pr-percent">80%</span> Profile Complete</h5>
                <div class="progress">
                  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"
                  aria-valuemin="0" aria-valuemax="100" style="width:80%">
                </div>
              </div>
            </li>

            <li class="a-normal">
              <a href="/user"><i class="fa fa-cog" aria-hidden="true"></i> Profile </a>
            </li>

            <li class="a-normal a-logout">
              <a href="/session/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout </a>
            </li>
          </ul>
        </div>
      </div>
    {{/if}}
  </div>
</div>
</header>
